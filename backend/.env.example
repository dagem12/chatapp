
# Chat App Backend Environment Configuration

# Copy this file to .env and update the values according to your setup


# Application Configuration

NODE_ENV=production
PORT=3000


# Database Configuration (PostgreSQL)

# Database connection URL
DATABASE_URL=postgresql://user:password@serverip:port/chat_app

# PostgreSQL specific settings
POSTGRES_DB=chat_app
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_PORT=port


# Redis Configuration

REDIS_HOST=serverip
REDIS_PORT=port
REDIS_PASSWORD=password
REDIS_DB=0


# JWT Authentication

# IMPORTANT: Change this to a secure random string in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d


# CORS Configuration

# Comma-separated list of allowed origins
# Example: http://localhost:3000,http://localhost:5173,https://yourdomain.com
CORS_ORIGIN=https://yourdomain.com,http://localhost:5173



# Logging Configuration

LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log


# File Upload Configuration

UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads


# Rate Limiting

RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100







# PM2 Configuration (for production deployment)

PM2_INSTANCES=2
PM2_EXEC_MODE=cluster


# Health Check Configuration

HEALTH_CHECK_TIMEOUT=5000


# Development/Testing (uncomment for development)

# NODE_ENV=development
# LOG_LEVEL=debug
# CORS_ORIGIN=*

